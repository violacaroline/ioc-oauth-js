<div class="events">
  <h1>Events</h1>
  <div class="page-links">
    <button><a href="./user/events?page=1">1</a></button>
    <button><a href="./user/events?page=2">2</a></button>
    <button><a href="./user/events?page=3">3</a></button>
    <button><a href="./user/events?page=4">4</a></button>
    <button><a href="./user/events?page=5">5</a></button>
    <button><a href="./user/events?page=6">6</a></button>
  </div>
  <table class="table-container">
    <thead>
      <tr>
        <th class="table-headings">Action Name</th>
        <th class="table-headings">Created At</th>
        <th class="table-headings">Target Title</th>
        <th class="table-headings">Target Type</th>
      </tr>
    </thead>
    <tbody>
      <% if (events?.length > 0) { %>
        <% let counter = 1; %>
        <% for (const event of events) { %>
          <tr>
            <td class="table-events">
              <%= counter %>. <%= event.action_name %>
            </td>
            <td class="table-events">
              <%= event.created_at.replace('T', ' ').substring(0, 19) %>
            </td>
            <td class="table-events">
              <%= event.target_title %>
            </td>
            <td class="table-events">
              <%= event.target_type %>
            </td>         
          </tr>
          <% counter++; %>
          <% } %>
            <% } else { %>
              <tr>
                <td class="table-no-events">
                  There are no events to display
                </td>
              </tr>
              <% } %>
    </tbody>
  </table>
</div>