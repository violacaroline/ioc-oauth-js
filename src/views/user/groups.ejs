<div class="groups">
  <button class="nav-button"><a href="<%=baseURL%>/user/events">My Events</a></button><button class="nav-button"><a href="<%=baseURL%>/user/groups">My Groups & Projects</a></button>
  <h1>Groups & Projects</h1>
  <% if (groups?.length > 0) { %>
    
    <% for (const group of groups) { %>
      <div class="group-div">
        <h3>Group</h3>
        <h4>
          <%= group.name %>
        </h4>
        <a href="<%= group.webUrl %>"><%= group.fullPath %></a>
        <% if (group.projects.nodes?.length > 0) { %>
          <h3>Projects</h3>
          <% for (const project of group.projects.nodes) { %>
            <div class="project-div">
              <h4>
                <%= project.name %>
              </h4>
              <a href="<%= project.webUrl %>"><%= project.fullPath %></a>
            </div>
            <% } %>
          <% } else { %>
            <div>
              <p>
                There are no projects to display
              </p>
            </div>
            <% } %>
      </div>
      <% } %>
      <% } else { %>
        <div>
          <p>
            There are no groups to display
          </p>
        </div>
        <% } %>
</div>